{
  "compileOnSave": true,
  "extends": "./tsconfig.path.json",
  "compilerOptions": {
    "target": "esnext",
    "typeRoots": [
      "src/Types/",
      "node_modules/@types/",
      "**/node_modules/@types/"
    ],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "noImplicitAny": false
  },
  "include": ["src", "craco.config.js", "workbox.config.js"]
}
